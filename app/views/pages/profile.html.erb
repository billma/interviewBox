
<div id="profilePage" class="floating">
  <div class="floating">
    <div id="userProfile"></div>
    <div id="questionList">
       <h5 class="sub_header">My Questions</h5>
       <div class="content">
          <p>
            No Questions Posted. Please Click On 'Create A Interview Question' Button
            To Start Recording A Question
         </p>
       </div>

    </div>
    <div id="responseList">
      <h5 class="sub_header">My Responses</h5>
      <div class="content">
        <p>
          You Have Not Posted Any Response yet
        </p>
      </div>
    </div>
     <div id="profileFooter"></div>
  </div>
</div>


<script type="text/javascript">
  
  var current_user='<%=cookies[:current_user]%>'
  var user = new InterviewBox.Models.User({id:current_user})
  var userProfileView= new InterviewBox.Views.UserProfileView({model:user})
  $('#userProfile').append(userProfileView.render().el)
  var questions = new InterviewBox.Collections.UserQuestionsCollection({userId:current_user})

  var questionListView= new  InterviewBox.Views.QuestionList({collection:questions})
  $('#questionList .content').html(questionListView.render_b().el)
  

  var responses=new InterviewBox.Collections.UserResponsesCollection({userId:current_user})

  var responseListView=new InterviewBox.Views.ResponseList({collection:responses})
  $('#responseList .content').html(responseListView.render_b().el)

</script>